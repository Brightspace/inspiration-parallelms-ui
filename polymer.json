{
  "entrypoint": "index.html",
  "shell": "src/my-app.js",
  "fragments": [
    "src/my-app-main-page.js",
    "src/my-login-page.js",
    "src/my-welcome-page.js",
    "src/my-view1.js",
    "src/my-view2.js",
    "src/my-view3.js",
    "src/my-view404.js",
    "src/my-course-page.js",
    "src/my-virtual-notebook.js"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/*.js",
    "bower_components/file-saver/*.js",
    "bower_components/tti-polyfill/tti-polyfill.js"
  ],
  "lint": {
    "rules": ["polymer-3"],
    "ignoreWarnings": ["non-literal-import", "not-loadable"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
